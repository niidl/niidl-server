// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model projects {
  id            Int            @id @default(autoincrement())
  threads       threads[]
  tags          tags[]
  contributor   contributors[]
  project_name  String         @db.VarChar(64)
  description   String         @db.VarChar(9999)
  github_url    String         @db.VarChar(255)
  owner         String
  user_acc      user_account   @relation(fields: [owner], references: [id])
  project_image String         @db.VarChar(255)
  project_type  String         @db.VarChar(64)
  type          project_type   @relation(fields: [project_type], references: [type])
}

model user_account {
  id            String         @id
  messages      messages[]
  projects      projects[]
  contributor   contributors[]
  threads       threads[]
  first_name    String         @db.VarChar(64)
  last_name     String         @db.VarChar(64)
  email         String         @unique
  creation_date DateTime       @default(now())
  github_url    String         @db.VarChar(255)
  user_name     String         @db.VarChar(32)
  session_id    String         @unique @db.VarChar(16)
}

model threads {
  id            Int          @id @default(autoincrement())
  content       String       @db.VarChar(9999)
  message       messages[]
  project_id    Int
  project       projects     @relation(fields: [project_id], references: [id])
  user_id       String
  user          user_account @relation(fields: [user_id], references: [id])
  creation_time DateTime     @default(now())
  title         String       @db.VarChar(64)
}

model taglibrary {
  id       Int    @id @default(autoincrement())
  tag_name String @unique @db.VarChar(64)
  tags     tags[]
}

model tags {
  id         Int        @id @default(autoincrement())
  tag_name   String
  tag        taglibrary @relation(fields: [tag_name], references: [tag_name])
  project_id Int
  project    projects   @relation(fields: [project_id], references: [id])
}

model messages {
  id            Int          @id @default(autoincrement())
  content       String       @db.VarChar(10000)
  creation_time DateTime     @default(now())
  user_id       String
  user          user_account @relation(fields: [user_id], references: [id])
  thread_id     Int
  thread        threads      @relation(fields: [thread_id], references: [id])
}

model contributors {
  id         Int          @id @default(autoincrement())
  user_id    String
  user_acc   user_account @relation(fields: [user_id], references: [id])
  project_id Int
  project    projects     @relation(fields: [project_id], references: [id])
}

model project_type {
  id       Int        @id @default(autoincrement())
  type     String     @unique @db.VarChar(64)
  projects projects[]
}
